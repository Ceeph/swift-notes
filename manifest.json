{
  // Required
  "manifest_version": 2,
  "name": "Swift Notes",
  "version": "0.1",
  "description": "Notes a keybind away",

  "browser_action": {
    "default_icon": "img/128.png",
    "default_title": "Swift Notes"
    //"default_popup": "popup.html"
  },

  "background": {
      "scripts": ["js/jquery-2.1.3.min.js",
                  "js/sidepanel.js",
                  "js/background.js"],
      "persistent": false
  },

  "content_scripts": [{
    "matches": ["http://*/*",
                "https://*/*"],
    "js": ["js/content.js"]
  }],

  "permissions": [
    //"storage",
    //"tabs",
    "activeTab"
    //"http://*/",
    //"https://*/"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Ctrl+Shift+Y",
        "linux": "Ctrl+Shift+Y"
      }
    }
  },
  "web_accessible_resources": [
    "sidebar.html"
  ],
  "offline_enabled": true
}